pipeline {
    agent any

    stages {
        stage('Clone repository') {
            steps {
                git credentialsId: 'Carlosuca', url: 'https://github.com/Carlosuca/react-app-linux.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('linuxapp:latest', '-f linux-app/dockerfile .')
                }
            }
        }
        stage('Run Tests') {
            steps {
                sh 'docker run --rm linuxapp:latest npm test -- --watch=false'
            }
        }
        stage('Deploy to DigitalOcean') {
            steps {
                script {
                    echo 'Autenticando en Docker Hub...'
                    docker.withRegistry('https://registry.hub.docker.com', 'dockerhub-credentials') {
                        echo 'Subiendo imagen a Docker Hub...'
                        docker.image('linuxapp:latest').push('latest')
                        echo 'Imagen subida correctamente.'
                    }
                    echo 'Descargando e iniciando contenedor desde Docker Hub...'
                    sh 'docker pull carlosm011/linuxapp:latest'
                    sh 'docker run -d -p 80:80 carlosm011/linuxapp:latest'
                    echo 'Contenedor desplegado correctamente.'
                }
            }
        }
    }
}
