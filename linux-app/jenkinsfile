pipeline {
    agent any

    stages {
        stage('Clone repository') {
            steps {
                git credentialsId: 'Carlosuca', url: 'https://github.com/Carlosuca/react-app-linux.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('linuxapp:latest', '-f linux-app/dockerfile .')
                }
            }
        }
        stage('Test') {
            parallel {
                stage('Unit Tests') {
                    steps {
                        sh 'npm run test:unit'
            }
        }
        stage('Integration Tests') {
                    steps {
                        sh 'npm run test:integration'
                    }
                }
            }
        }
        stage('Deploy to DigitalOcean') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'dockerhub-credentials') {
                        docker.image('linuxapp:latest').push('latest')
                    }
                }
                sh 'docker pull carlosm11/linuxapp:latest && docker run -d -p 80:80 carlosm11/linuxapp:latest'
            }
        }
    }
}
